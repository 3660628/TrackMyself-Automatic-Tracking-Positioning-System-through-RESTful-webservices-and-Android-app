<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->


    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_tracking"
        android:summary="@string/pref_description_enable_tracking_recommendations"
        android:title="@string/pref_title_enable_tracking_recommendations" />
     

   
    <ListPreference
        android:defaultValue="120"
        android:entries="@array/pref_intervallo_acquisizione_titles"
        android:entryValues="@array/pref_intervallo_acquisizione_values"
        android:key="intervallo_acquisizione"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_intervallo_acquisizione_dati_label" />
   
   

</PreferenceScreen>